<!DOCTYPE html>
<html lang="en">

<head>

    <!-- IMPORTING HEAD TAG EJS FILE  -->
    <%- include('./Component/Head_Tag') -%>

        <style>
            body {
                background-color: rgb(0, 0, 0);
                color: white;
            }

            .custom_view {
                display: flex;
            }

            .custom_view_left {
                flex-basis: 50%;
            }

            .custom_view_right {
                flex-basis: 50%;
            }

            #recAmountId:in-range {
                background-color: rgb(255, 255, 255);
            }

            #recAmountId:out-of-range {
                background-color: rgb(255 0 0 / 18%);
                color: black;
            }

            #recAmountId:in-range+label::after {
                content: "";
            }

            #recAmountId:out-of-range+label::after {
                content: "Please try with lower amount";
                font-size: 14px;
                position: relative;
                color: #f10202;
                text-shadow: 1px 1px black;
            }
        </style>

        <title>Document</title>
</head>

<body>

    <%- include('./Component/NavBar') -%>

        <!-- - Back to all users -->

        <div class="container mt-2">
            <a href="/data" class="btn btn-secondary fw-bold ">&larr; Back</a>
        </div>


        <div class="container mt-4 custom_view_left text-center">
            <i class="far fa-user" style="font-size: 7rem;"></i>

        </div>

        <!-- Reciver -->
        <div class="container bg-primary  text-center p-2 mt-3 " style="border-radius: 20px">
            <h3 class="text-light fw-4">Edit Details</h3>
        </div>
        <div class="container">
            <form action="/edit" method="POST" class="mt-3" style="border:2px solid rgb(171, 255, 137) ; border-radius: 20px">
                <div class="form-group m-3">
                    <label for="exampleInputEmail1">Name</label>
                    <% data.forEach((e)=> {%>
                        <input type="hidden" name="ChangerID" value="<%= e._id %>">
                        <input type="text" class="form-control mt-1" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="ChangeName" placeholder="Enter New Name" value="<%= e.name %>"><br>
                        Email
                        <input type="email" class="form-control mt-1" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="ChangeEmail" placeholder="Enter New Email" value="<%= e.email %>"><br>
                        Number
                        <input type="number" class="form-control mt-1" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="ChangeContact" placeholder="Enter New Number" value="<%= e.contact %>"><br>
                        Amount To Be Deposit
                        <input type="number" class="form-control mt-1" id="exampleInputEmail1" aria-describedby="emailHelp"
                            name="ChangeBalance" placeholder="Enter Amount To Deposit" value="<%= e.amount %>">

                            <div class="text-center">
                                <button type="submit" class="btn btn-outline-info mt-3 ">Submit</button>
                            </div>

                        <%}) %>
                </div>



            </form>
        </div>


        <%- include('./Component/BootstrapScript') -%>

</body>

</html>