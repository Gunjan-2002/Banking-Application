<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./Component/headtag') -%>

        <title>Open Bank</title>
</head>

<body>

    <%- include('./Component/navbar') -%>

        <!-- - Back to all users -->

        <div class="container mt-2">
            <a href="/" class="btn btn-secondary fw-bold ">&larr; Back</a>
        </div>

        <div class="container mt-5">
            <div class="container mt-5 bg-primary text-center text-light fw-30 p-2">
                <h3>View All Customer</h3>
            </div>

            <table class="table mt-2 table-bordered table-dark table-hover table-striped">
                <thead class="bg-primary text-dark table-light">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Contact</th>
                        <th scope="col">Balance</th>
                        <th scope="col">Transfer</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Remove</th>

                    </tr>
                </thead>
                <tbody>
                    <% if(data.length>0){%>
                        <% data.forEach((e)=> {%>
                            <tr>
                                <td>
                                    <%= e.name %>
                                </td>
                                <td>
                                    <%= e.email %>
                                </td>
                                <td>
                                    <%= e.contact %>
                                </td>
                                <td>
                                    <%= e.amount %>
                                </td>
                                <td >
                                    <a href="/view/<%=e._id %>" class="btn btn-outline-info btn-sm d-grid gap-2 m-1">View & Transfer</a>
                                </td>
                                <td>
                                    <a href="/view/edit/<%=e._id %>" class="btn btn-outline-info btn-sm d-grid gap-2 m-1">Edit Detail's</a>
                                </td>
                                <td>
                                    <a href="/delete/<%=e._id %>"" class=" btn btn-outline-danger btn-sm d-grid gap-2 m-1">
                                        <i class="fa fa-trash m-1"></i>
                                    </a>
                                </td>
                            </tr>

                            <%}) %>

                                <%}else{%>
                                    <tr class="bg-warning text-light">
                                        <td>

                                            No records Found!

                                        </td>
                                    </tr>


                                    <%} %>


                </tbody>
            </table>
        </div>
        <%- include('./Component/bootstrapscript') -%>


</body>

</html>